<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/cpn"
        style="@style/Text.Emphasised"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/widget_margin" />

    <TextView
        android:id="@+id/lbl_detail"
        style="@style/Text"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cpn"
        android:layout_marginRight="@dimen/widget_margin" />
    <!-- android:autoLink="web" -->

    <TextView
        android:id="@+id/lbl_link"
        style="@style/Text"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lbl_detail"
        android:layout_marginRight="@dimen/widget_margin"
        android:textColor="@color/holo_blue" />

</RelativeLayout>