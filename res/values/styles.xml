<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Text.H1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">@dimen/text_H1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.H2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_H2</item>
    </style>
   
    <style name="Text.H3">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">@dimen/text_H3</item>
    </style>
   
    <style name="Text.Emphasised">
        <item name="android:textSize">@dimen/text_emphasised</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">@dimen/text_hint</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_button_general</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selector_button_general_textcolor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="Button.General">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    
    <style name="Button.General.Main">
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="HorizontallyDistributedLL">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

</resources>